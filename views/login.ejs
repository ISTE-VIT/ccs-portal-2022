<body >
  <header id="header"></header>
  <% include ./partials/navbar %>

  <div class="container my-5 text-center">
    <div class="row justify-content-center align-items-center">
      <div class="col-12 col-lg-7 col-md-7 ">
        <h1 class="main-heading">Core Committee Selections</h1>
        <h3 class="text-primary secondary-heading">Dare to be different, dare to be ISTE!</h3>
      </div>
      <div class="col-11 col-lg-4 col-md-5 p-3 mt-2 card shadow-lg login-panel-card">
          <form method="post" action="/users/login">
            <% include ./partials/messages %>
            <div class="card-body">
                <h3 class="card-title">LOGIN</h3>
                  <form class="card-text" id="login-form">
                    <div class="form-group">
                      <input type="email" name="email" pattern=".+2020.*@vitstudent.ac.in$" class="form-control" id="email"
                        placeholder="VIT Gmail">
                      <small id="emailHelp" class="form-text text-muted">Only first year's VIT Gmail is accepted.</small>
                    </div>
                    <div class="form-group">
                      <input type="password" name="pass" minlength="6" required class="form-control" id="password"
                        placeholder="Password" />
                    </div>
                    <button type="submit" class="btn btn-primary ">Login</button>
                    <div class="d-flex align-items-center my-2">
                      <div class="flex-grow-1 border-bottom"></div>
                      <div class="px-2 text-primary">OR</div>
                      <div class="flex-grow-1 border-bottom"></div>
                    </div>
                  </form>
                  <h3 class="card-title">SIGN UP NOW</h5>
                    <p class="card-text">
                      <button type="button" class="btn btn-primary" onclick='window.location.href="/users/register"'>Sign
                        Up</button>
                    </p>
              </div>
          </form>

      </div>
    </div>
