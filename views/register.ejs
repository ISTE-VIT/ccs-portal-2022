  <body>
    <header id="header"></header>
    <% include ./partials/navbar %>

    <div
      class="container col-11 col-lg-7 col-md-10 col-sm-10 p-4 pt-5 pb-5 mt-5 shadow-lg"
      style="background-color: white; border-bottom: 6px solid #40c0ff;"
    >
      <h4 style="padding-left: 30px;"><b>SIGN UP</b></h4>
      <br />

      <form id="signup-form"  method="post" action="/users/register"  >
        <% include ./partials/messages %>

        <div class="form-row">
          <div class="form-column pl-3 pr-3 pb-2 col-md-7">
            <div class="form-group col-md-10">
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Name"
                required
              />
              <img id="icon" src="/img/icon/person-fill.png" />
            </div>
            <div class="form-group col-md-10">
              <input
                type="text"
                name="regno"
                class="form-control"
                id="registrationNumber"
                placeholder="Registration Number"
                pattern="20[A-Za-z]{3}[0-9]{4}"
                required
              />
              <img
                id="icon"
                src="/img/icon/numeric.png"
                style="padding-top: 13px; padding-left: 10px;"
              />
            </div>
            <div class="form-group col-md-10">
              <input
                type="email"
                name="email"
                class="form-control"
                id="email"
                placeholder="VIT Gmail"
                pattern=".+2020.*@vitstudent.ac.in$"
                required
              />

              <img id="icon" src="/img/icon/email_round.png" />
            </div>
            <div class="form-group col-md-10">
              <input
                type="text"
                class="form-control"
                id="mobile"
                name="phno"
                placeholder="Mobile Number (10 digits)"
                pattern="[0-9]{10}"
                required
              />
              <img
                id="icon"
                src="/img/icon/mobile.png "
                style="padding-left: 14px;"
              />
            </div>

            <div class="form-group col-md-10">
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="Password"
                required
                minlength="6"
              />
              <img id="icon" src="/img/icon/asterisk.png" />
            </div>
          </div>
          <div class="form-column pl-4 pr-3 col-md-5">
            <h5>Tick your preferred domain(s):</h5>
            <br />
            <div class="form-check">
              <input
                type="checkbox"
                class="form-check-input"
                id="TechnicalCSE"
                name="TechnicalCSE"
              />
              <label class="form-check-label" for="TechnicalCSE">
                Technical(CSE)
              </label>
            </div>
            <div class="form-check">
              <input
                type="checkbox"
                class="form-check-input"
                id="TechnicalElectrical"
                name="TechnicalElectrical"
              />
              <label class="form-check-label" for="TechnicalElectrical">
                Technical(Electrical)
              </label>
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="Management" name="Management" />
              <label class="form-check-label" for="Management">
                Management
              </label>
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" name="Design" id="Design" />
              <label class="form-check-label" for="Design">Design</label>
            </div>
            <span>
              <span class="text-danger">
                *Select at least one preferred domain(s) before signing up.
              </span>
              <br />
              You can choose more than one domain.
            </span>
            <div class="text-center pt-3 mr-3">
              <button
                type="submit"
                class="btn btn-primary"
                style="background-color: #39ade6; border-color: #39ade6;"
              >
                Sign Up
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>

  </body>
</html>
